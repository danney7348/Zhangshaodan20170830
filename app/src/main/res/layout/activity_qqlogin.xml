<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwie.text.QQloginActivity">

    <TextView
        android:id="@+id/tv_qq_name"
        android:text="name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp" />
    <ImageView
        android:id="@+id/iv_qq_touxiao"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_below="@+id/tv_qq_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
    <Button
        android:id="@+id/btn_qq_shouquanlogin"
        android:layout_width="wrap_content"
        android:text="qq授权登录"
        android:onClick="qqClick"
        android:background="#56A1FC"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/iv_qq_touxiao"
        android:layout_alignLeft="@+id/iv_qq_touxiao"
        android:layout_alignStart="@+id/iv_qq_touxiao" />
</RelativeLayout>
